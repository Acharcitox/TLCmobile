<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#CCE2EC"
    tools:context=".DenunciarActivity">


    <TextView
        android:id="@+id/textView4"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="413dp"
        android:layout_height="187dp"
        android:background="@drawable/corners"
        android:shadowColor="@color/black"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-2dp"
        tools:layout_editor_absoluteY="-2dp" />


    <TextView
        android:id="@+id/txtdenuncua"
        android:layout_width="346dp"
        android:layout_height="195dp"
        android:background="@drawable/cornertext"
        android:gravity="center"
        android:text="que le ocurrió?"
        android:textAlignment="center"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="249dp" />

    <TextView
        android:id="@+id/tv_propina"
        android:layout_width="234dp"
        android:layout_height="33dp"
        android:text="¿Desea Realizar una denuncia?"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="80dp"></TextView>

    <EditText
        android:id="@+id/eTTipo_Denuncia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        tools:layout_editor_absoluteX="-2dp"
        tools:layout_editor_absoluteY="670dp"></EditText>

    <EditText
        android:id="@+id/eTDenuncia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="635dp"></EditText>

    <Button
        android:id="@+id/btnDenunciar"
        android:layout_width="338dp"
        android:layout_height="53dp"
        android:text="Enviar Denuncia"
        tools:layout_editor_absoluteX="37dp"
        tools:layout_editor_absoluteY="488dp" />

    <Button
        android:id="@+id/btnOmitir"
        android:layout_width="341dp"
        android:layout_height="48dp"
        android:text="Omitir"
        tools:layout_editor_absoluteX="37dp"
        tools:layout_editor_absoluteY="571dp" />


</androidx.constraintlayout.widget.ConstraintLayout>