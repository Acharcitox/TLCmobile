<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/fondo"
    tools:context=".DenunciarActivity">


    <TextView
        android:id="@+id/textView4"
        android:layout_width="413dp"
        android:layout_height="187dp"
        android:background="@drawable/corners"
        android:shadowColor="@color/black"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-2dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/txtdenuncua"
        android:layout_width="346dp"
        android:layout_height="195dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/cornertext"
        android:gravity="center"
        android:text="que le ocurrió?"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_propina"
        android:layout_width="234dp"
        android:layout_height="33dp"
        android:text="¿Desea Realizar una denuncia?"
        app:layout_constraintBottom_toBottomOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.487"
        tools:ignore="MissingConstraints"></TextView>

    <EditText
        android:id="@+id/eTTipo_Denuncia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        tools:layout_editor_absoluteX="-2dp"
        tools:layout_editor_absoluteY="670dp"
        android:visibility="invisible"
        tools:ignore="MissingConstraints"></EditText>

    <EditText
        android:id="@+id/eTDenuncia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="635dp"
        android:visibility="invisible"
        tools:ignore="MissingConstraints"></EditText>

    <Button
        android:id="@+id/btnDenunciar"
        android:layout_width="338dp"
        android:layout_height="53dp"
        android:layout_marginTop="20dp"
        android:text="Enviar Denuncia"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.547"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtdenuncua"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnOmitir"
        android:layout_width="341dp"
        android:layout_height="48dp"
        android:text="Omitir"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.528"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnDenunciar"
        app:layout_constraintVertical_bias="0.204"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>