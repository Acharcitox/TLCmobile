<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/fondo"
    tools:context=".DarPropinaActivity">


    <Button
        android:id="@+id/btnDarPropina"
        android:layout_width="209dp"
        android:layout_height="73dp"
        android:background="@drawable/botones"
        android:text="PAGAR"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.806"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtotromonto"
        app:layout_constraintVertical_bias="0.3"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="516dp"
        android:background="@drawable/corners"
        android:shadowColor="@color/black"

        app:layout_constraintStart_toStartOf="parent"
        android:orientation="vertical"
        tools:ignore="MissingConstraints" >

        <TextView
            android:id="@+id/nombeusr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pedro,"
            android:textColor="@color/colorPrimary"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            tools:layout_editor_absoluteX="19dp" />

        <TextView
            android:id="@+id/tvPropina"
            android:layout_width="263dp"
            android:layout_height="28dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="10dp"
            android:text="Â¿Desea darle propina al Operador?"
            android:textColor="@color/colorPrimary"
            android:fontFamily="@font/roboto"
            android:textSize="16sp"/>

    </LinearLayout>


    <EditText
        android:id="@+id/txtotromonto"
        android:layout_width="311dp"
        android:layout_height="60dp"
        android:layout_marginBottom="248dp"
        android:textColorHint="#989191"
        android:textColor="@color/black"
        android:gravity="center"
        android:hint="INGRESAR OTRO MONTO"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.293"
        tools:ignore="MissingConstraints"
        android:inputType="number"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="36dp"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/btn60"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_gravity="right"
            android:text="$ 60"
            android:layout_marginLeft="8dp"/>

        <Button
            android:id="@+id/btn20"
            android:layout_width="85dp"
            android:layout_height="80dp"
            android:layout_gravity="left"
            android:text="$ 20"
            android:layout_marginLeft="8dp"/>

        <Button
            android:id="@+id/btn40"
            android:layout_width="85dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="8dp"
            android:text="$ 40" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>